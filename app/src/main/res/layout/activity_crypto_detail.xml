<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/navataspd"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center"
            android:text="Bitcoin"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/btc" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/text_view_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="BTC"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="20dp"
        android:text="$67707.65"
        android:textSize="35dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="16dp"
        android:background="@drawable/containtren">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statisctic"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Market Cap"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_mcap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,332,572,424,763"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 Hour Trading Vol"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_vol24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$9,216,479,696"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Circulating Supply"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_cspply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19,706,284"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Supply"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_tspply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21,000,000"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="16dp"
        android:background="@drawable/containtren">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Percent Change 24h"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_pch24h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1.47%"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Percent Change 1h"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_pch1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.05%"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Percent Change 7d"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>

            <TextView
                android:id="@+id/text_view_pch7d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1.07%"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Buy"
        android:layout_margin="10dp"
        android:backgroundTint="#1A4D2E"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/nunito_sans_extrabold" />


</LinearLayout>
